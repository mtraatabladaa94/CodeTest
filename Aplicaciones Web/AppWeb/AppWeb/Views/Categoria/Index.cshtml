@model IEnumerable<AppWeb.Models.CategoriaEntity>

@{
    ViewBag.Title = "Categorias";
}

<h2>Listado de Categorias</h2>

<div class="panel panel-default">
    <div class="panel-body">
        <p>
            @Html.ActionLink("Crear nuevo", "Create", null, new { @class = "btn btn-danger" })
        </p>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.CategoriaID)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Nombre)
                    </th>
                    <th></th>
                </tr>
            </thead>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.CategoriaID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nombre)
                    </td>
                    <td class="table-operation">
                        <a href="@Url.Action("Edit", "Categoria", new { id = item.CategoriaID})" class="btn btn-danger">
                            <i class="glyphicon glyphicon-pencil"></i>
                        </a>
                        <a href="@Url.Action("Edit", "Categoria", new { id = item.CategoriaID})" class="btn btn-warning">
                            <i class="glyphicon glyphicon-file"></i>
                        </a>
                        <a href="@Url.Action("Delete", "Categoria", new { id = item.CategoriaID})" class="btn btn-default">
                            <i class="glyphicon glyphicon-trash"></i>
                        </a>
                    </td>
                </tr>
            }

        </table>
    </div>
    

</div>

