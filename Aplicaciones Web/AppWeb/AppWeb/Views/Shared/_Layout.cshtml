<!DOCTYPE html>
<html lang="es">
    <head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
        <meta charset="utf-8" />
        <title>@ViewBag.Title - Mi aplicación ASP.NET</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        <link rel="stylesheet" href="~/components/bower_components/bootstrap/dist/css/bootstrap.min.css" />
        @Styles.Render("~/Content/css")
        @*@Scripts.Render("~/bundles/modernizr")*@
    </head>
    <body>
        <header class="aw-menu">
            <nav class="navbar navbar-default">
                <div class="container-fluid">
                    <div class="container">
                        <!-- Brand and toggle get grouped for better mobile display -->
                        <div class="navbar-header">
                            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                                <span class="sr-only">Toggle navigation</span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                            </button>
                            <a class="navbar-brand aw-link" href="#"">Inicio +
                            </a>
                        </div>

                        <!-- Collect the nav links, forms, and other content for toggling -->
                        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                            <ul class="nav navbar-nav navbar-right">
                                <li class="dropdown">
                                    <a href="#" class="dropdown-toggle aw-link" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Catálogos <span class="caret"></span></a>
                                    <ul class="dropdown-menu">
                                        <li><a href="@Url.Action("Index", "Categoria", null)">Categorias</a></li>
                                        <li><a href="@Url.Action("Index", "Producto", null)">Productos</a></li>
                                        <li role="separator" class="divider"></li>
                                        <li><a href="@Url.Action("Register", "Account", null)">Registrarse</a></li>
                                    </ul>
                                </li>
                                <li class="dropdown">
                                    <a href="#" class="dropdown-toggle aw-link" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Ventas <span class="caret"></span></a>
                                    <ul class="dropdown-menu">
                                        <li><a href="@Url.Action("Index", "Cliente", null)">Clientes</a></li>
                                        <li><a href="@Url.Action("Index", "Venta", null)">Ventas</a></li>
                                    </ul>
                                </li>
                                <li><a href="@Url.Action("Index", "Usuario", null)" class="aw-link">Usuarios</a></li>
                                <li><a href="@Url.Action("Index", "Producto", null)" class="aw-link">Ver Productos</a></li>
                                <li><a href="#" class="aw-link">Comentarios</a></li>
                                <li><a href="#" class="aw-link">Contactos</a></li>
                            </ul>
                        </div>
                        <!-- /.navbar-collapse -->
                    </div>
                </div>
                <!-- /.container-fluid -->
            </nav>
        </header>
        <div id="body">
            <div class="container">
                @RenderSection("featured", required: false)
                <section class="content-wrapper main-content clear-fix">
                    @RenderBody()
                </section>
            </div>
        </div>
        <footer class="container">
            <div class="content-wrapper">
                <div class="float-left">
                    <p>&copy; @DateTime.Now.Year - Mi aplicación ASP.NET</p>
                </div>
            </div>
        </footer>

        <script type="text/javascript" src="~/components/bower_components/jquery/dist/jquery.min.js"></script>
        <script type="text/javascript" src="~/components/bower_components/bootstrap/dist/js/bootstrap.min.js"></script>
        @RenderSection("scripts", required: false)
    </body>
</html>
