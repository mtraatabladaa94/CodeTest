<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="110px"
    android:orientation="vertical"
    android:padding="5dp"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <TextView
        android:id="@+id/txtSurveyCategory"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:paddingTop="1dp"
        android:layout_alignParentLeft="true"
        android:text="Categoria"
        android:textSize="12dp"
        android:textStyle="bold"
        android:textColor="@color/abc_primary_text_material_light" />

    <TextView
        android:id="@+id/txtDate"
        android:layout_width="40dp"
        android:layout_height="10dp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="-50dp"
        android:textSize="8dp"
        android:textColor="#757575"
        android:text="25/5/17"
        android:layout_toRightOf="@+id/txtSurveyCategory" />

    <TextView
        android:id="@+id/txtHour"
        android:layout_width="40dp"
        android:layout_height="15dp"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="-52dp"
        android:textSize="13dp"
        android:textColor="#757575"
        android:text="19:30"
        android:layout_toRightOf="@+id/txtSurveyCategory" />

    <ImageView
        android:id="@+id/imvStarted"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_toRightOf="@+id/txtSurveyCategory"
        android:layout_marginLeft="-15dp"
        android:layout_marginTop="12dp"
        android:src="@drawable/ic_recyclerview_started"
        />

    <TextView
        android:id="@+id/txtSurveyName"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:paddingTop="1dp"
        android:text="Nombre de la Categoria"
        android:textSize="12dp"
        android:textColor="@color/abc_primary_text_material_light"
        android:layout_marginTop="20dp"
         />
    
    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#cfd8dc"
        android:layout_marginTop="9dp"
        android:layout_below="@+id/txtSurveyName"
        android:layout_alignParentBottom="false" />

</RelativeLayout>